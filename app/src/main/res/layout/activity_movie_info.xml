<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:attribute="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_movie_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chamas.luis.cinema.MovieInfo">

    <developer.shivam.library.CrescentoImageView
        android:id="@+id/crescentoImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:elevation="20dp"
        attribute:gravity="top"
        attribute:curvature="50dp"
        attribute:tintMode="manual"
        attribute:tintColor="#FFFFFF"
        attribute:tintAlpha="50" />



</LinearLayout>
